<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_100"
    tools:context=".MenuGerente">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleCentered="true"
            app:title="MENU GERENTE"
            app:titleTextColor="@color/white"
            android:background="@color/green_500"
            style="@style/Widget.MaterialComponents.Toolbar.Primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_sentinel_lock"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="100dp"
    />

    <Button
        android:id="@+id/LiberarLocacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Liberar Locação"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/green_500" />

    <Button
        android:id="@+id/EncerrarLocacao"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encerrar Locação"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/green_500" />
    <Button
        android:id="@+id/buttonLogout"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:text="@string/signOut"/>



</androidx.appcompat.widget.LinearLayoutCompat>